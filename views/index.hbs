<div id="page-wrapper" ng-controller="dashboardController">
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">

                        </div>
                        <div class="col-xs-9">
                            <div class="huge">
                                <div ng-bind="weather.temp"></div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <span class="pull-left"> <h3>
                            <div ng-bind="(weather.description| uppercase)"></div>
                        </h3> </span>
                        <span class="pull-right">
                             <span id="weather_image_hidden" ng-show="0" ng-bind="weather.image"> </span>
                            <img id="weather_image" src="">
                        </span>
                        <div class="clearfix"></div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-4">
                            <h4>Humidity %</h4>
                        </div>
                        <div class="col-xs-8 text-right">

                            <h2>
                                <div class="progress">
                                    <div ng-bind="weather.humidity" id="humidity_bar"
                                         class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0"
                                         aria-valuemin="0" aria-valuemax="100"
                                         style="width: 0%">
                                    </div>
                                </div>
                            </h2>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-4">
                            <h4>Pressure hPa </h4>
                        </div>
                        <div class="col-xs-8 text-right">

                            <h3 ng-bind="weather.pressure"></h3>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-4">
                            <h4>Wind </h4>
                        </div>
                        <div class="col-xs-8 text-right">
                            <h3 ng-bind="weather.windspeed"></h3>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-clock-o fa-3x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="h4" ng-bind="currentTime"></div>
                        </div>
                    </div>
                </div>

                <div class="panel-footer">
                        <span class="pull-left">
                             <div>Sunrise</div>
                             <div ng-bind="sunrise"></div>
                        </span>
                        <span class="pull-right">
                               <div>Sunset</div>
                               <div ng-bind="sunset"></div>
                        </span>
                    <div class="clearfix"></div>
                </div>

            </div>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1><i class="fa fa-bus fa-2x"> </i> Station Info </h1>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Time</th>
                            <th>Line</th>
                            <th>Destination</th>
                        </tr>
                        </thead>

                        <tbody>
                        <tr class="text-success" ng-repeat="item in trafficData">
                            <td ng-bind="item.departure"></td>
                            <td ng-bind="item.line"></td>
                            <td ng-bind="item.direction"></td>
                        </tr>
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>